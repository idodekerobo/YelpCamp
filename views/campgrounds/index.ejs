<!-- the .. lets you go one folder up to get to the partials directory since the path changed-->
<% include ../partials/header %> 

<div class="container">
   
    <header class="jumbotron">
        
        <div class="container">
            <h1>Welcome to YelpCamp</h1>
            <p>View your handpicked campgrounds from all over the world.</p>
            <p><a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a></p>
        </div>
        
    </header>
  
    <!-- style tag below is to make sure our grid isn't thrown off by heights of diff images-->
    <div class="row text-center">
        <% campgrounds.forEach(function(camp) { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= camp.image; %>">
                    <div class="caption">
                        <h4><%= camp.name; %></h4>
                    </div>
                        <!-- camp is the name we're giving it inside the forEach-->
                    <a href="/campgrounds/<%=camp._id%>" class="btn btn-primary">More Info</a>
                </div>
            </div>
        <% }); %>
    </div>
    
</div>

<% include ../partials/footer %>
