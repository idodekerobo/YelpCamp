<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit Comment</h1>
        
        <div style="width: 30%; margin: 35px auto;">
        <!-- post a form to campgrounds path, make sure campground is defined in route or it'll show as campground undefined-->
        <form action="/campgrounds/<%=campground_id %>/comments/<%= comment._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <!-- name the input comment[text] so it groups it together. when we use req.body.comment it'll have text and author inside of it-->
                <input class="form-control" type="text" name="comment[text]" value="<%=comment.text%>">    
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-default btn-block">Submit!</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
        </div>
        
    </div>
    
</div>

<% include ../partials/footer %>
